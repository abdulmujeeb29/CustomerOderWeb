@model CustomerOrderWeb.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Login";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["ErrorMessage"]
    </div>
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Password"> Password</label>
        <input asp-for="Password" type="password" class="form-control" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit">Login</button>
</form>
<a asp-controller="Authentication" asp-action="GoogleLogin" class="btn btn-primary">
    Login with Google
</a>

@await Html.PartialAsync("_ValidationScriptsPartial")

<div>
    <a asp-action="ForgotPassword" asp-controller="Authentication">Forgot Password?</a>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div style="color:red;">
        Invalid login attempt. Please try again.
    </div>
}
